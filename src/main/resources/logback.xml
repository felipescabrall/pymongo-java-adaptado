<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File Appender para logs detalhados (opcional) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>mongoimport.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Logger específico para a aplicação -->
    <logger name="com.mongoimport" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <!-- Descomente a linha abaixo para habilitar log em arquivo -->
        <!-- <appender-ref ref="FILE"/> -->
    </logger>
    
    <!-- Logger para MongoDB driver (reduzir verbosidade) -->
    <logger name="org.mongodb.driver" level="WARN"/>
    
    <!-- Logger para OpenCSV -->
    <logger name="com.opencsv" level="WARN"/>
    
    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>